@using GasStantion.Util
@model GasStantion.Models.News

<a href="@Url.Action("News", "News", new {id = Model.Id})" class="news-card">
    <div class="card-image-wrapper">
        <img src="@HtmlUtils.Image(Model.PreviewImageUrl)" />
    </div>
    <div class="title">@Model.Title</div>
    @HtmlUtils.Cut(Model.ShortDescription)
</a>