@model IEnumerable<GasStantion.Models.UserFeedback>
@using GasStantion.Areas.Admin.ViewModels
@using GasStantion.Util
@{
    ViewData.AddPath(Url.Action("Index", "AdminUserFeedbacks"), "Отзывы");
}

<h2>Отзывы</h2>

<p>
    @Html.ActionLink("Создать отзыв", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stars)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsShowOnMain)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stars)
        </td>
        <td>
            @HtmlUtils.Cut(item.Comment, 150)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsShowOnMain)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |            
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
